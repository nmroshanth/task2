<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="fanuc_crx10ia_arm" params="prefix parent xyz rpy">

    <!-- ================= BASE LINK ================= -->
    <link name="${prefix}base_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://arm_description/meshes/base_link.stl"
                scale="1 1 1"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://arm_description/meshes/base_link.stl"
                scale="1 1 1"/>
        </geometry>
      </collision>
    </link>

    <!-- world attachment -->
    <joint name="${prefix}base_fixed_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}base_link"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
    </joint>

    <!-- ================= LINK 1 ================= -->
    <link name="${prefix}link_1">
      <visual>
        <geometry>
          <mesh filename="package://arm_description/meshes/link_1.stl" scale="1 1 1"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://arm_description/meshes/link_1.stl" scale="1 1 1"/>
        </geometry>
      </collision>
    </link>

    <!-- ================= LINK 2 ================= -->
    <link name="${prefix}link_2">
      <visual>
        <geometry>
          <mesh filename="package://arm_description/meshes/link_2.stl" scale="1 1 1"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://arm_description/meshes/link_2.stl" scale="1 1 1"/>
        </geometry>
      </collision>
    </link>

    <!-- ================= LINK 3 ================= -->
    <link name="${prefix}link_3">
      <visual>
        <geometry>
          <mesh filename="package://arm_description/meshes/link_3.stl" scale="1 1 1"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://arm_description/meshes/link_3.stl" scale="1 1 1"/>
        </geometry>
      </collision>
    </link>

    <!-- ================= LINK 4 ================= -->
    <link name="${prefix}link_4">
      <visual>
        <geometry>
          <mesh filename="package://arm_description/meshes/link_4.stl" scale="1 1 1"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://arm_description/meshes/link_4.stl" scale="1 1 1"/>
        </geometry>
      </collision>
    </link>

    <!-- ================= LINK 5 ================= -->
    <link name="${prefix}link_5">
      <visual>
        <geometry>
          <mesh filename="package://arm_description/meshes/link_5.stl" scale="1 1 1"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://arm_description/meshes/link_5.stl" scale="1 1 1"/>
        </geometry>
      </collision>
    </link>

    <!-- ================= LINK 6 ================= -->
    <link name="${prefix}link_6">
      <visual>
        <geometry>
          <mesh filename="package://arm_description/meshes/link_6.stl" scale="1 1 1"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://arm_description/meshes/link_6.stl" scale="1 1 1"/>
        </geometry>
      </collision>
    </link>

    <!-- ================= JOINTS ================= -->
    <joint name="${prefix}joint_1" type="revolute">
      <parent link="${prefix}base_link"/>
      <child link="${prefix}link_1"/>
      <origin xyz="0 0 0.245" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="-3.14159" upper="3.14159" effort="10" velocity="2.094"/>
    </joint>

    <joint name="${prefix}joint_2" type="revolute">
      <parent link="${prefix}link_1"/>
      <child link="${prefix}link_2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-3.14159" upper="3.14159" effort="10" velocity="2.094"/>
    </joint>

    <joint name="${prefix}joint_3" type="revolute">
      <parent link="${prefix}link_2"/>
      <child link="${prefix}link_3"/>
      <origin xyz="0 0 0.710" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit lower="-4.71239" upper="4.71239" effort="10" velocity="3.14159"/>
    </joint>

    <joint name="${prefix}joint_4" type="revolute">
      <parent link="${prefix}link_3"/>
      <child link="${prefix}link_4"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <axis xyz="-1 0 0"/>
      <limit lower="-3.31613" upper="3.31613" effort="10" velocity="3.14159"/>
    </joint>

    <joint name="${prefix}joint_5" type="revolute">
      <parent link="${prefix}link_4"/>
      <child link="${prefix}link_5"/>
      <origin xyz="0.540 -0.150 0" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit lower="-3.14159" upper="3.14159" effort="10" velocity="3.14159"/>
    </joint>

    <joint name="${prefix}joint_6" type="revolute">
      <parent link="${prefix}link_5"/>
      <child link="${prefix}link_6"/>
      <origin xyz="0.160 0 0" rpy="0 0 0"/>
      <axis xyz="-1 0 0"/>
      <limit lower="-3.31613" upper="3.31613" effort="10" velocity="3.14159"/>
    </joint>

    <!-- ================= TOOL FRAMES ================= -->
    <link name="${prefix}flange"/>
    <joint name="${prefix}joint_6_flange" type="fixed">
      <parent link="${prefix}link_6"/>
      <child link="${prefix}flange"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="${prefix}tool0"/>
    <joint name="${prefix}flange_tool0" type="fixed">
      <parent link="${prefix}flange"/>
      <child link="${prefix}tool0"/>
      <origin xyz="0 0 0" rpy="3.14159265 -1.57079633 0"/>
    </joint>

  </xacro:macro>

</robot>